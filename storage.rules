rules_version = '2';

// Firebase Storage security rules สำหรับโปรแกรมออกใบรับประกัน
service firebase.storage {
  match /b/{bucket}/o {
    
    // กฎสำหรับโลโก้บริษัท - เปิดกว้างสำหรับการทดสอบ
    match /company-logos/{allPaths=**} {
      // อนุญาตให้ทำทุกอย่างได้ (สำหรับการทดสอบ)
      allow read, write: if true;
    }
    
    // กฎเริ่มต้น: ปฏิเสธการเข้าถึงไฟล์อื่นๆ
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
